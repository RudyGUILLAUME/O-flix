{% extends 'back/base_back.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table back-show">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>RealeaseDate</th>
                <td>{{ movie.realeaseDate ? movie.realeaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ movie.summary }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img src="{{ movie.poster }}" class="back-show__poster"></td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ movie.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_movie_index') }}">back to list</a>

    <a href="{{ path('app_back_movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('back/movie/_delete_form.html.twig') }}
{% endblock %}
