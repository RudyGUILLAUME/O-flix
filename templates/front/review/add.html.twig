{% extends 'base.html.twig' %}

{% block title %}Ajouter une critique{% endblock %}

{% block body %}

<div class="container">

    <h1>{{ movie.title }}</h1>
    <h2>Ajouter une critique</h2>

    {# on désactive la validation HTML5 avec novalidate #}
    {# si on souhaite ajouter des attributs HTML (id, class) l'option 'attr' est faite pour ça #}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-review'}}) }}

        {# form_widget() va générer automatiquement tous les champs de formulaire #}
        {{ form_widget(form) }}

        {# on ajoute le bouton à la main ici (bonne pratique Symfo) #}
        <button class="btn btn-success">Ajouter</button>

    {{ form_end(form) }}

</div>

{% endblock %}
